<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.vetclinic.controller.ProductsServicesReportParametersController"
            prefHeight="500.0" prefWidth="600.0">

<BorderPane>
    <top>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Параметры отчета по товарам и услугам" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        </VBox>
    </top>
    
    <center>
        <ScrollPane>
            <VBox spacing="15" style="-fx-padding: 20;">
                <GridPane hgap="10" vgap="10">
                    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                    
                    
                    <Label text="Период от:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="startDatePicker" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>
                    
                    <Label text="Период до:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="endDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>
                    
                    <Separator GridPane.columnSpan="2" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    
                    
                    <Label text="Фильтры:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    
                    <Label text="Сотрудник:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="employeeFilter" promptText="Все сотрудники" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="300"/>
                    
                    <Label text="Тип:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="itemTypeFilter" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="300"/>
                    
                    <Separator GridPane.columnSpan="2" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    
                    
                    <Label text="Сортировка:" GridPane.rowIndex="7" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    
                    <Label text="По полю:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="sortFieldComboBox" GridPane.rowIndex="8" GridPane.columnIndex="1" prefWidth="300"/>
                    
                    <Label text="Направление:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="sortDirectionComboBox" GridPane.rowIndex="9" GridPane.columnIndex="1" prefWidth="300"/>
                </GridPane>
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 20;">
            <Button text="Сформировать отчет" onAction="#onGenerateReportButtonClick" prefWidth="150" prefHeight="40"/>
            <Button text="Отмена" onAction="#onCancelButtonClick" prefWidth="100" prefHeight="40"/>
        </HBox>
    </bottom>
</BorderPane>

</AnchorPane>

