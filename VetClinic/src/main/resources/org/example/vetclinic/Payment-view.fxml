<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.vetclinic.controller.PaymentController"
            prefHeight="500.0" prefWidth="600.0">

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Text text="Оплата" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

            <GridPane alignment="CENTER" hgap="10" vgap="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="idLabel" text="" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                
                <Label text="Прием:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="visitComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="400"/>

                
                <Label text="Дата оплаты:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="paymentDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="400"/>

                
                <Label text="Время оплаты:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="paymentTimeComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="400" promptText="14:30"/>

                
                <Label text="Сумма:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="amountField" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="400" promptText="0.00"/>

                
                <Label text="Способ оплаты:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="paymentMethodComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="400"/>

                
                <Label text="Статус:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <ComboBox fx:id="statusComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1" prefWidth="400"/>

                
                <Label text="Заметки:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextArea fx:id="notesField" wrapText="true" prefRowCount="3" GridPane.rowIndex="7" GridPane.columnIndex="1" prefWidth="400"/>

            </GridPane>

            <HBox spacing="10">
                <Button text="Сохранить" onAction="#onSaveButtonClick" style="-fx-base: #4CAF50;" prefWidth="120" prefHeight="40"/>
                <Button text="Отмена" onAction="#onCancelButtonClick" style="-fx-base: #F44336;" prefWidth="120" prefHeight="40"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>

</AnchorPane>

