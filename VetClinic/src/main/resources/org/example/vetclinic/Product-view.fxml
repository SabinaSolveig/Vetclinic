<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.vetclinic.controller.ProductController"
      spacing="10"
      style="-fx-padding: 20;">
    
    <Label text="Управление товарами" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    
    <HBox spacing="10">
        <Button text="Добавить товар" onAction="#onAddButtonClick" prefWidth="140" prefHeight="30"/>
        <Button text="Удалить товар" onAction="#onDeleteButtonClick" prefWidth="140" prefHeight="30"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Закрыть" onAction="#onCloseButtonClick" prefWidth="100" prefHeight="30"/>
    </HBox>
    
    <TableView fx:id="productTable" prefHeight="400" editable="true">
        <columns>
            <TableColumn fx:id="productNameColumn" text="Название" prefWidth="250" editable="true">
            </TableColumn>
            <TableColumn fx:id="categoryNameColumn" text="Категория" prefWidth="200" editable="true">
            </TableColumn>
            <TableColumn fx:id="priceColumn" text="Цена" prefWidth="120" editable="true">
            </TableColumn>
            <TableColumn fx:id="stockQuantityColumn" text="Количество" prefWidth="120" editable="true">
            </TableColumn>
        </columns>
    </TableView>
    
    <Label text="Для редактирования: дважды кликните на ячейку" 
           style="-fx-font-size: 12; -fx-text-fill: gray;"/>
    
</VBox>

