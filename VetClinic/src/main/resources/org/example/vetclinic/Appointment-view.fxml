<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.vetclinic.controller.AppointmentController"
            prefHeight="500.0" prefWidth="600.0">

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Text text="Заявка на прием" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

            <GridPane alignment="CENTER" hgap="10" vgap="10" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="idLabel" text="" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                
                <Label text="Клиент:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="clientComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300"/>

                
                <Label text="Животное:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="petComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="300"/>

                
                <Label text="Сотрудник:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="employeeComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="300"/>

                
                <Label text="Дата приема:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <DatePicker fx:id="appointmentDatePicker" GridPane.rowIndex="4" GridPane.columnIndex="1" prefWidth="300"/>

                
                <Label text="Время приема:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="appointmentTimeComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="300" promptText="14:30"/>

                
                <Label text="Статус:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <ComboBox fx:id="statusComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1" prefWidth="300"/>

                
                <Label text="Заметки:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextArea fx:id="notesField" wrapText="true" prefRowCount="3" GridPane.rowIndex="7" GridPane.columnIndex="1" prefWidth="300"/>

            </GridPane>

            <Separator/>

            <VBox spacing="10">
                <Label text="Предварительные услуги" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                
                <HBox spacing="10">
                    <Button text="Добавить услугу" onAction="#onAddPreliminaryServiceButtonClick" prefWidth="150" prefHeight="30"/>
                    <Button text="Удалить услугу" onAction="#onDeletePreliminaryServiceButtonClick" prefWidth="150" prefHeight="30"/>
                </HBox>

                <TableView fx:id="preliminaryServicesTable" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="serviceNameColumn" text="Услуга" prefWidth="250">
                        </TableColumn>
                        <TableColumn fx:id="quantityColumn" text="Количество" prefWidth="100">
                        </TableColumn>
                        <TableColumn fx:id="priceColumn" text="Цена за единицу" prefWidth="120">
                        </TableColumn>
                        <TableColumn fx:id="totalPriceColumn" text="Итого" prefWidth="120">
                        </TableColumn>
                        <TableColumn fx:id="notesColumn" text="Заметки" prefWidth="200">
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>

            <HBox spacing="10">
                <Button text="Сохранить" onAction="#onSaveButtonClick" style="-fx-base: #4CAF50;"/>
                <Button text="Отмена" onAction="#onCancelButtonClick" style="-fx-base: #F44336;"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>

</AnchorPane>

